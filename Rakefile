# Rakefile
require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('yahoo_oauth', '0.1.0') do |p|
  p.description    = "A Ruby library to the Yahoo! OAuth API"
  p.url            = "http://github.com/taweili/yahoo_oauth"
  p.author         = "David Li"
  p.email          = "taweili@yahoo.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.runtime_dependencies = ["oauth", "json"]
  p.development_dependencies = []
end
